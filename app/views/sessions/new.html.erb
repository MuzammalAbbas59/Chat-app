<h2 class="ui center aligned header">Welcome to ChatApp - where feelings get heard</h2>
<h4 class="ui center aligned icon header">
  <i class="circular red lock open icon"></i>
  Login to Lockin
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_for(:session, html:{class: "ui form", role: "form"}, url:login_path) do |f|%>
      <div class="ui form">
        <div class="field">
          <%= f.label :username ,"Username" %>
          <div class="ui left icon input">
            <%=f.text_field :username ,placeholder:"Username"%>
            <i class="user icon"></i>
          </div>
        </div>
         <div class="field">
          <%= f.label :password ,"Password" %>
          <div class="ui left icon input">
            <%=f.password_field :password, placeholder:"Password"%>
            <i class="lock icon"></i>
          </div>
        </div>
        </div>
        <br>
        <div class="field">
        <%=f.button "Login" ,class:"ui center red submit button"%>
        <%end%>
      </div>
      
    </div>
    <div class="middle aligned column">
      <div class="ui big red button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>